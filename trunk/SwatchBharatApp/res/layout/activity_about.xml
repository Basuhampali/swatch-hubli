<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".HomeActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:text="SWATCH HUBLI is an android app which has be designed by students after learning Android in 15 days at www.PracticalCoding.in with an intention of making hubballi a clean and hygine place.In this direction SWATCH HUBLI app helps you in taking a pic of unhygine place and make people aware of garbage so that it can be cleaned as soon as possible.Contact us at info@PracticalCoding.in"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="18dp" >
    </ListView>

</RelativeLayout>
